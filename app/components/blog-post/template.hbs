<article>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">{{post.title}}</h3>
  </div>
  <div class="panel-body">
    <p>{{post.text}}</p>
  </div>
  <div class="panel-footer">
    <p>
    <i>Posted on <span class="text-success">{{post.createdDate}}</span> by <b class="text-primary">{{post.author}}</b></i>
    <button type="button" class="btn btn-warning btn-sm pull-right">Delete</button>
    </p>
  </div>
</div>
</article>
